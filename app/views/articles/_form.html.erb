<%= form_for (@article) do |f| %>
  <div class="field">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :author, '著者' %>
    <%= f.text_field :author %>
  </div>

  <div class="actions">
    <%= f.submit '投稿する' %>
  </div>
  <%= link_to 'キャンセル', :back %>
<% end %>
