<h1>投稿一覧</h1>
<%= link_to '新規投稿', new_article_path %>
<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>著者</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= article.body %></td>
      <td><%= article.author %></td>
    </tr>
  <% end %>
</table>
